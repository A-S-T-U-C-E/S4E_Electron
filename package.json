{
    "name": "S4E",
    "version": "0.7.2",
    "description": "Studio4Education is a web-based visual programming editor for [STmicroelectronics boards](https://www.st.com/content/st_com/en.html)",
    "license": "BSD-3-Clause",
    "author": "SÃ©bastien Canet <scanet@libreduc.cc>",
    "main": "main.js",
    "keywords": [
        "blockly",
        "ST",
        "STM",
        "ST32",
        "STM32",
        "Nucleo",
        "blocks",
        "scratch",
        "S4E",
        "STudio4Education",
        "electron",
        "ELECTRON",
        "serialport",
        "SERIALPORT",
        "electron-builder"
    ],
    "build": {
        "asar": true,
        "appId": "com.electron.Studio4Education",
        "directories": {
            "buildResources": "./src",
            "output": "./dist"
        },
        "productName": "Studio4Education",
        "win": {
            "target": [
                "portable",
                "zip"
            ],
            "icon": "src/appIcon.png"
        },
        "nsis": {
            "installerIcon": "src/install.ico",
            "uninstallerIcon": "src/icon.ico",
            "oneClick": false,
            "perMachine": true,
            "deleteAppDataOnUninstall": true,
            "allowToChangeInstallationDirectory": true,
            "runAfterFinish": true
        },
        "fileAssociations": {
            "ext": "S4E",
            "name": "S4E File",
            "role": "Editor",
            "icon": "src/icon.ico"
        },
        "extraFiles": [
            "compiler",
            "libraries",
            "www",
            "README.md",
            "LICENSE.md",
            "config.json"
        ],
        "publish": [
            {
                "provider": "github",
                "repo": "A-S-T-U-C-E/S4E_Electron",
                "owner": "SebCanet",
                "releaseType": "release"
            }
        ]
    },
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "prepare": "electron-build-env npm rebuild",
        "start": "electron .",
        "compile": "electron-builder --win --ia32"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/A-S-T-U-C-E/S4E_Electron"
    },
    "bugs": {
        "url": "https://github.com/A-S-T-U-C-E/S4E_Electron/issues"
    },
    "devDependencies": {
        "electron": "^9.0.5",
        "electron-builder": "^22.7.0",
        "electron-rebuild": "^1.11.0"
    },
    "dependencies": {
        "child_process": "^1.0.2",
        "electron-build-env": "^0.2.0",
        "electron-updater": "^4.3.1",
        "fs-extra": "^9.0.1",
        "serialport": "^9.0.0",
        "tableify": "^1.1.0"
    }
}
