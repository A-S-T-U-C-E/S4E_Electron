{
    "name": "S4E_Electron",
    "version": "0.7.0",
    "description": "Studio4Education is a web-based visual programming editor for [STmicroeclectronics boards](https://www.st.com/content/st_com/en.html)",
    "license": "GPL-3.0",
    "author": "Sebastien Canet <scanet@libreduc.cc>",
    "main": "main.js",
    "keywords": [
        "blockly",
        "ST",
        "STM",
        "ST32",
        "STM32",
        "Nucleo",
        "blocks",
        "scratch"
    ],
    "build": {
        "asar": true,
        "appId": "com.electron.Studio4Education",
        "directories": {
            "buildResources": "./src",
            "output": "./dist"
        },
        "productName": "Studio4Education",
        "win": {
            "target": [
                "portable",
                "zip"
            ],
            "icon": "src/appIcon.png"
        },
        "nsis": {
            "installerIcon": "src/install.ico",
            "uninstallerIcon": "src/icon.ico",
            "oneClick": false,
            "perMachine": true,
            "deleteAppDataOnUninstall": true,
            "allowToChangeInstallationDirectory": true,
            "runAfterFinish": true
        },
        "fileAssociations": {
            "ext": "S4E",
            "name": "BLOCKLY File",
            "role": "Editor",
            "icon": "src/icon.ico"
        },
        "extraFiles": [
            "compiler",
            "sketchbook",
            "www",
            "README.md",
            "LICENSE.md"
        ],
        "publish": [
            {
                "provider": "github",
                "repo": "SebCanet/S4E_electron",
                "owner": "SebCanet",
                "releaseType": "release"
            }
        ]
    },
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "start": "electron .",
        "compiler": "electron-builder --win --ia32",
        "prepare": "electron-build-env npm rebuild"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/SebCanet/S4E_electron"
    },
    "bugs": {
        "url": "https://github.com/SebCanet/S4E_electron/issues"
    },
    "devDependencies": {
        "electron": "^8.3.0",
        "electron-builder": "^22.7.0"
    },
    "dependencies": {
        "child_process": "^1.0.2",
        "electron-build-env": "^0.2.0",
        "electron-updater": "^4.3.1",
        "fs-extra": "^9.0.1",
        "npm-check-updates": "^7.0.1",
        "serialport": "^9.0.0",
        "tableify": "^1.1.0"
    }
}
